@model IEnumerable<Kooboo.Web.Mvc.Grid.PageSizeCommand>
@("Show rows".Localize()):
<select>
    @{       
        foreach (var item in Model)
        {
            var current = ViewContext.RequestContext.GetRequestValue(item.PageIndexName);
    
    <option value="@Html.Raw(item.PageIndexValue)" @Html.Raw(string.Compare(current,item.PageIndexValue,true)==0? "checked":"")
        href="@Url.Action(item.ActionName,item.RouteValues)">
        @Html.Raw(item.PageIndexValue)</option>
        } 
    }
</select>
