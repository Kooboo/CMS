@model Kooboo.CMS.Web.Areas.Account.Models.ResetPasswordModel
@{
    ViewBag.Title = "ResetPassword".Localize();
    Layout = "~/Areas/Account/Views/Shared/Blank.cshtml";
}
<div class="common-form">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m=>m.UserName)
        <fieldset>
            <table>
                <tbody>
                    @Html.DisplayFor(m => m.UserName)
                    @Html.EditorFor(m => m.NewPassword)
                    @Html.EditorFor(m => m.NewPassword1)
                </tbody>
            </table>
        </fieldset>
        <p class="buttons">
            <button type="submit">
                @("Save".Localize())</button>
        </p>
    }
</div>
