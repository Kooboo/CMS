@model System.Collections.Generic.IEnumerable<Kooboo.CMS.Modules.Publishing.Models.LocalPublishingQueue>
@{
    ViewBag.Title = "Local publishing queue".Localize();
    Layout = "~/Views/Shared/Site.cshtml";
}

@section Panel{
    <ul class="panel">
        <li class="j_DropDown">
            <a>
                @Html.IconImage("add")
                @Html.IconImage("arrow small white-down")
                @("Publish".Localize())
            </a>
            <ul class="j_DropDownContent hide">
                <li><a href="@Url.Action("PublishPage", ViewContext.RequestContext.AllRouteValues().Merge("return", ViewContext.HttpContext.Request.RawUrl))">
                    @("Page".Localize())</a></li>
                <li><a href="@Url.Action("PublishTextContent", ViewContext.RequestContext.AllRouteValues().Merge("return", ViewContext.HttpContext.Request.RawUrl))" title="@("New sub site".Localize())">
                    @("Text content".Localize())</a></li>
            </ul>
        </li>
        <li>
            <a href="@Url.Action("Delete", ViewContext.RequestContext.AllRouteValues().Merge("return", ViewContext.HttpContext.Request.RawUrl))" data-show-on-check="Any" data-command-type="AjaxPost"  data-confirm="@("Are you sure you want to delete the remote setting?".Localize())">
                @Html.IconImage("delete")
                @("Delete".Localize())
            </a>
        </li>
    </ul>
}

<div class="topbar clearfix">
    <h1 class="title">
        @ViewBag.Title</h1>
    @Html.Partial("_AdvancedSearch")
</div>
@Html.GridForModel2()
