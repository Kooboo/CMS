@model Kooboo.CMS.Modules.Publishing.Models.OutgoingQueue
@{
    ViewBag.Title = "Edit outgoing queue".Localize();
    Layout = "~/Views/Shared/Blank.cshtml";
}
@section Panel{
    <ul class="panel">
        <li>
            <a data-ajaxform="">
                @Html.IconImage("save") @("Save".Localize())</a>
        </li>
        <li>
            <a href="@ViewContext.RequestContext.GetRequestValue("return")">
                @Html.IconImage("cancel") @("Back".Localize())</a>
        </li>
    </ul>
}
<div class="common-form">
    <h1 class="title">@ViewBag.Title</h1>
    @using (Html.BeginForm())
    { 
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m=>m.UUID)
        <table>
            <tbody>
                @Html.DisplayFor(m=>m.PublishingObject)
                @Html.DisplayFor(m=>m.ObjectUUID)
                @Html.DisplayFor(m=>m.RemoteEndpoint)
                @Html.DisplayFor(m=>m.RemoteFolderId)
                @Html.DisplayFor(m=>m.Action)
                @Html.DisplayFor(m=>m.RetryTimes)
                @Html.DisplayFor(m=>m.UtcLastExecutedTime)
                @Html.DisplayFor(m=>m.UtcCreationDate)
                @Html.EditorFor(m => m.Status, new { HtmlAttributes = new { @class = "medium cmis-config" } })
            </tbody>
        </table>
    }
</div>