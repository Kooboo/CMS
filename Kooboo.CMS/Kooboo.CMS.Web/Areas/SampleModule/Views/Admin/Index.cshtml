@model Kooboo.CMS.ModuleArea.Models.ModuleInfo_Metadata
@{
    Layout = "~/Views/Shared/Site.cshtml";
    ViewBag.Title = "Settings".Localize();
}

@section Panel{
    <ul class="panel">
        <li>
            <a data-ajaxform="">
                @Html.IconImage("save") @("Save".Localize())</a>
        </li>
    </ul>
}

<div class="block common-form">
    <h1 class="title">@ViewBag.Title</h1>

    @{Html.BeginForm();}
    <div class="tabs">
        <ul class="tab-index clearfix">
            <li class="active"><a href="#basicInfo">@("Basic".Localize())</a>@Html.IconImage("arrow blue-down")</li>
            <li><a href="#settingsInfo">@("Settings".Localize())</a>@Html.IconImage("arrow blue-down")</li>
            <li><a href="#entryInfo">@("Default entry".Localize())</a>@Html.IconImage("arrow blue-down")</li>
        </ul>
        <div class="tab-content active" id="basicInfo">
            <table>
                <tbody>
                    @Html.HiddenFor(m => m.ModuleName)
                    @Html.DisplayFor(m => m.ModuleName)
                    @Html.DisplayFor(m => m.Version)
                    @Html.DisplayFor(m => m.KoobooCMSVersion)
                </tbody>
            </table>
        </div>
        <div class="tab-content" id="settingsInfo">
            @Html.EditorFor(m => m.Settings)
        </div>
        <div class="tab-content" id="entryInfo">
            @Html.EditorFor(m => m.Settings.Entry)
        </div>
    </div>
    @{Html.EndForm();}
</div>
<script type="text/javascript">
    $(function () {
        $('.tabs').koobooTab();
    });
</script>
