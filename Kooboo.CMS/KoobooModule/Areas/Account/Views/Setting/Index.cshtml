@model Kooboo.CMS.Account.Models.Setting
@{
    ViewBag.Title = "Security settings".Localize();
    Layout = "~/Views/Shared/Site.cshtml";
}
@section Panel{
    <ul class="panel">
        <li>
            <a data-ajaxform="">
                @Html.IconImage("save") @("Save".Localize())</a>
        </li>
        @foreach (var group in Kooboo.CMS.Sites.Extension.UI.TopToolbar.ToolbarButtons.GetToolbarButtons(ViewContext.RequestContext))
        {
            @Html.Partial("_ToolbarGroupButtons", group)
        }
    </ul>
}
<div class="block common-form">
    <h1 class="title">@ViewBag.Title</h1>
    @using (Html.BeginForm())
    {
      
        <table>
            <tbody>
                @Html.EditorFor(m => m.PasswordStrength, new { HtmlAttributes = new { @class = "medium" } })
                @Html.EditorFor(m => m.PasswordInvalidMessage, new { HtmlAttributes = new { @class = "medium" } })
                @Html.EditorFor(m => m.EnableLockout)
                @Html.EditorFor(m => m.FailedPasswordAttemptCount, new { HtmlAttributes = new { @class = "medium" } })
                @Html.EditorFor(m => m.MinutesToUnlock, new { HtmlAttributes = new { @class = "medium" } })
            </tbody>
        </table>    
    }
</div>
